version: '3.2'

services:
  agent:
    image: portainer/agent
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/volumes:/var/lib/docker/volumes
    networks:
      - portainer_agent

  portainer:
    image: portainer/portainer-ce:{{ portainer_version }}
    command: -H tcp://agent:9001 --tlsskipverify
    ports:
      - "9000:9000"
    networks:
      - portainer_agent
    volumes:
      - portainer_data:/data

networks:
  portainer_agent:
    driver: bridge

volumes:
  portainer_data:
    driver: local
